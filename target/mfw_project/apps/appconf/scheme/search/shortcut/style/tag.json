{
  "type": "object",
  "description": "标签style",
  "properties": {
    "style": {
      "type": "string",
      "enum": [
        "tag"
      ],
      "description": "客户端的呈现样式style"
    },
    "type":{
      "type":"string",
      "enum":[
        "hot_word"
      ],
      "description":"数据类型"      
    },
    "data": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "头部标题"
        },
        "image": {
          "type": "object",
          "description": "头部图片,优先级高于头部标题",
          "properties":{
            "image_url":{
              "type":"string",
              "description":"图片资源"
            },
            "width":{
              "type":"integer",
              "description":"指定宽度，一倍图宽度，不可为空"
            },
            "height":{
              "type":"integer",
              "description":"一倍图高度,不可为空"
            }
          }
        },
        "list":{
          "type":"array",
          "items":{
            "type":"object",
            "properties":{
              "text":{
                "type":"string",
                "description":"推荐搜索词"
              },
              "bg_color":{
                "type":"string",
                "description":"搜索词背景色"
              },
              "jump_url":{
                "type":"string",
                "description":"跳转链接"
              },
              "tag":{
                "ref":"_partial/tag",
                "include":[
                  "text",
                  "text_color"
                ]
              },
              "badge":{
                "ref":"_partial/badge",
                "include":[
                  "image",
                  "width",
                  "height"
                ]
              }
            }
          }
        }
      }
    }
  }
}