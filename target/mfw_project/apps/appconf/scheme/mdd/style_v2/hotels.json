{
    "type": "object",
    "description": "带标签的酒店",
    "properties": {
        "style": {
            "type": "string",
            "enum": [
                "hotels"
            ],
            "description": "客户端的呈现样式"
        },
        "data": {
            "type": "object",
            "description": "数据",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "标题"
                },
                "jump_url": {
                    "type": "string",
                    "description": "跳转链接"
                },
                "bottom": {
                    "type": "string",
                    "description": "查看更多 这样的文字"
                },
                "has_more": {
                    "type": "integer",
                    "description": "是否显示查看更多 0/1"
                },
                "list": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "tag_name": {
                                "type": "sting",
                                "description": "tag名称"
                            },
                            "jump_url": {
                                "type": "sting",
                                "description": "tag下的jump url"
                            },
                            "desc":{
                                "type":"string",
                                "description":"描述信息，例如：本周已订**"
                            },
                            "list": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "subtitle": {
                                            "type": "string",
                                            "description": "支持html"
                                        },
                                        "thumbnail": {
                                            "type": "string"
                                        },
                                        "badge": {
                                            "description": "酒店角标",
                                            "ref": "_partial/badge",
                                            "include": [
                                                "image",
                                                "width",
                                                "height"
                                            ]
                                        },
                                        "price": {
                                            "description": "产品价格",
                                            "ref": "_partial/price",
                                            "include": [
                                                "number",
                                                "type",
                                                "suffix"
                                            ]
                                        },
                                        "jump_url": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}