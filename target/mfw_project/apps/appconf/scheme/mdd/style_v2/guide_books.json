{
    "type": "object",
    "description": "自由行攻略书",
    "properties": {
        "style": {
            "type": "string",
            "enum": [
                "guide_books"
            ],
            "description": "客户端的呈现样式"
        },
        "data": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "标题"
                },
                "jump_url": {
                    "type": "string",
                    "description": "跳转链接"
                },
                "bottom": {
                    "type": "string",
                    "description": "查看更多 这样的文字"
                },
                "has_more": {
                    "type": "integer",
                    "description": "是否显示查看更多 0/1"
                },
                "list": {
                    "type": "array",
                    "items": {
                        "ref":"/guide/book/book",
                        "include":[
                            "title",
                            "thumbnail",
                            "desc",
                            "jump_url"
                        ]
                    }
                }
            }
        }
    }
}