{
  "type": "object",
  "description": "回答的基本实体",
  "properties": {
    "id": {
      "type": "string"
    },
    "qid": {
      "type": "string",
      "description": "问题的id"
    },
    "content_height": {
      "type": "string",
      "description": "内容显示高度系数(如1.5:显示1.5屏幕)"
    },
    "is_read": {
      "type": "integer",
      "description": "该回答是否已读"
    },
    "content": {
      "type": "array",
      "description": "回答的内容",
      "items":{
        "anyOf":[
          {
            "type":"object",
            "description":"文本类型",
            "properties":{
              "type":{
                "type":"string",
                "description":"txt"
              },
              "content":{
                "type":"string",
                "description":"文本内容"
              }
            }
          },
          {
            "type":"object",
            "description":"图片类型",
            "properties":{
              "type":{
                "type":"string",
                "description":"image"
              },
              "value":{
                "type":"object",
                "description":"图片信息",
                "properties":{
                  "imgurl":{
                    "type":"string",
                    "description":"大图"
                  },
                  "oimgurl":{
                    "type":"string",
                    "description":"原图"
                  },
                  "sizes":{
                    "type":"object",
                    "description":"图片分辨率大小",
                    "properties":{
                      "height":{
                        "type":"integer"
                      },
                      "width":{
                        "type":"integer"
                      }
                    }
                  }
                }
              }
            }
          },
          {
            "type":"object",
            "description":"超链接类型",
            "properties":{
              "type":{
                "type":"string",
                "description":"link"
              },
              "content":{
                "type":"string",
                "description":"显示内容"
              },
              "url":{
                "type":"string",
                "description":"跳转链接"
              }
            }
          }
        ]
      }
    },
    "date": {
      "type": "string",
      "description": "时间"
    }
  }
}